{
  "name": "Elixir Dev Container (mise)",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/postgres:1": {
      "version": "15"
    },
    "ghcr.io/rocker-org/devcontainer-features/apt-packages:1": {
      "packages": "curl,git,unzip,build-essential,libssl-dev,automake,autoconf,libncurses5-dev"
    },
    "ghcr.io/devcontainers-extra/features/mise:1": {}
  },
  "hostRequirements": {
    "cpus": 8,
    "memory": "32gb",
    "storage": "64gb"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "extensions": [
        "jakebecker.elixir-ls",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "postCreateCommand": "if [ -f .tool-versions ]; then mise install && mise exec -- mix local.hex --force && mise exec -- mix local.rebar --force; fi",
  "remoteUser": "root"
}
